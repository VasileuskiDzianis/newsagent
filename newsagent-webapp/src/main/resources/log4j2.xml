<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

	<Appenders>
		<File name="File" fileName="newsagent.log">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n" />
		</File>
	</Appenders>

	<Loggers>
		<Logger name="by.htp.newsagent" level="warn" additivity="true">
			<AppenderRef ref="File" />
		</Logger>

		<!-- Root Logger -->
		<Root level="WARN">
			<AppenderRef ref="File" />
		</Root>
	</Loggers>

</Configuration>